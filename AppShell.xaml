<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChoreHub2._0.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ChoreHub2._0.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:Home}"
        Icon="{OnPlatform 'smallchorehub.png', iOS='adaptive_icon.png', MacCatalyst='adaptive_icon.png'}"/>  
        
    <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate views:AllNotesPage}"
            Icon="{OnPlatform 'icon_notes.png', iOS='icon_notes_ios.png', MacCatalyst='icon_notes_ios.png'}" />

    <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate views:ChoresPage}"
            Icon="{OnPlatform 'icon_about.png', iOS='icon_about_ios.png', MacCatalyst='icon_about_ios.png'}"/>
    
    </TabBar>
    
</Shell>
