<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ChoreHub2._0.ViewModels"
             x:Class="ChoreHub2._0.Views.ChoresPage"
             Title="Chores">
    <ContentPage.BindingContext>
        <viewModels:ChoresViewModel />
    </ContentPage.BindingContext>
        <StackLayout>
            <ListView ItemsSource="{Binding ChoresList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Description}" FontAttributes="Bold"/>
                                <Label Text="{Binding Priority}" FontAttributes="Italic"/>
                                <Label Text="{Binding AssignerId}"/>
                                <Label Text="{Binding AssigneeId}"/>
                                <Label Text="{Binding Rating}"/>
                                <Label Text="{Binding IsCompleted}"/>
                                <!-- Add more labels for other chore properties if needed -->
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
</ContentPage>
