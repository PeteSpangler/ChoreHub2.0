<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:ChoreHub2._0.ViewModels"
             x:Class="ChoreHub2._0.Views.ChorePage"
             Title="ChorePage">
    <ContentPage.BindingContext>
        <viewModels:ChoreViewModel />
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="35" Margin="5">
        <Label Text="Who is doing the chore?" />
        <Entry Text="{Binding Assignee}" />

        <Label Text="Description of the chore" />
        <Entry Text="{Binding Description}" />

        <Label Text="{Binding Priority, StringFormat='Priority: {0:F0}'}"/>
        <Slider Value="{Binding Priority, Mode=TwoWay}" Minimum="0" Maximum="10" />

        <Button Text="Take Photo" Command="{Binding TakePhoto}"/>
        <Image Source="{Binding Picture}"/>

        <Grid ColumnDefinitions="*,*" ColumnSpacing="4">
            <Button Text="Save"
                    Command="{Binding SaveCommand}" />
            <Button Grid.Column="1"
                    Text="Delete"
                    Command="{Binding DeleteCommand}" />
        </Grid>
    </VerticalStackLayout>
</ContentPage>