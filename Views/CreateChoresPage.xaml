<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChoreHub2._0.Views.CreateChoresPage"
             Title="CreateChoresPage"
             xmlns:model="clr-namespace:ChoreHub2._0.Models"
             xmlns:viewModels="clr-namespace:ChoreHub2._0.ViewModels">
    <ContentPage.BindingContext>
        <viewModels:CreateChoreViewModel />
    </ContentPage.BindingContext>
    <StackLayout Margin="20">
        <Entry Placeholder="Description" Text="{Binding Description}" />
        <Entry Placeholder="Priority" Keyboard="Numeric" Text="{Binding Priority}" />
        <Picker Title="Assigner" ItemsSource="{Binding Users}" ItemDisplayBinding="{Binding FullName}" SelectedItem="{Binding Assigner}" />
        <Picker Title="Assignee" ItemsSource="{Binding Users}" ItemDisplayBinding="{Binding FullName}" SelectedItem="{Binding Assignee}" />
        <Button Text="Save" Command="{Binding SaveCommand}" />
    </StackLayout>
</ContentPage>